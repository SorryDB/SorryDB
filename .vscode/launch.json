  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug morphcloud_agent",
      "type": "debugpy",
      "request": "launch",
      "module": "sorrydb.agents.morphcloud_agent",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": ["--sorry-file", "mock_sorry.json"]
    },
    {
      "name": "Debug run_agentic",
      "type": "debugpy",
      "request": "launch",
      "module": "sorrydb.cli.run_agentic",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
